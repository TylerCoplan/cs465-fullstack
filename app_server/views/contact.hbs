<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>Contact - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
            {{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div id="contact" class="body">
							<h1>Contact</h1>
							<form action="/" method="post">
								<table>
									<tbody>
										{{#each contactField}}
											{{#ifEquals inputType "text"}}
											<tr>
												<td>{{this.field}}</td>
												<td><input type="{{this.inputType}}" value="" class="{{this.class}}"></td>
											</tr>
											{{/ifEquals}}
											{{#ifEquals inputType "textarea"}}
											<tr>
												<td class="{{this.class}}">{{this.field}}:</td>
												<td><textarea></textarea></td>
											</tr>
											{{/ifEquals}}
											{{#ifEquals inputType "radio"}}
												<p>{{this.field}}</p>
												<tr>
													{{#each options}}
													<input type="{{this.input}}" id="{{this.option}}" name="{{this.input}}" value="{{this.option}}">
													<label for="{{this.option}}">{{this.option}}</label>
													{{/each}}
												</tr>
											{{/ifEquals}}
										{{/each}}
										<tr>
											<td></td>
											<td><input type="submit" value="" class="btn"></td>
										</tr>
									</tbody>
								</table>
							</form>
							<h2>Travlr Getaways</h2>
							<p>
								<span>Address:</span> 123 Lorem Ipsum Cove, Sed Ut City, LI 12345
							</p>
							<p>
								<span>Telephone Number:</span> 1-800-999-9999
							</p>
							<p>
								<span>Fax Number:</span> 1-800-111-1111
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
        {{> footer}}
	</div>
</body>
</html>